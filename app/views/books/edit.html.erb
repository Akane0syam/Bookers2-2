<h1>Editing Book</h1>
<%= form_with(model: @book, local: true) do |f| %>


  <div class="field">
    <%= f.label :Title %><br>
    <%= f.text_field :title, id: :book_title %>
  </div>

  <div class="field">
    <%= f.label :Opinion %><br>
    <%= f.text_area :body, id: :book_body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<%= link_to 'Show', @book %> |
<%= link_to 'Back', books_path %>



<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>title</h4>
      <%= f.text_field :title%>
    <h4>Opinion</h4>
      <%= f.text_area :body %>

      <br>

    <%= f.submit 'Create Book' %>
  <% end %>

<% @books.each do |book| %>
<div>
  <%= image_tag book.get_image %>
  <p><%= image_tag 'no_image.jpg' %></p>
  <p>Title：<%= book.title %></p>
  <p>Opinion：<%= book.body %></p>

</div>
<% end %>
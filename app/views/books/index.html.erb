<p id="notice">
 <%=  notice %>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
     <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
     <% end %>
  </tbody>
</table>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>title</h4>
      <%= f.text_field :title%>
    <h4>Opinion</h4>
      <%= f.text_area :body %>

      <br>

    <%= f.submit 'Create Book' %>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-lg-3" >

     <h2>User info</h2>
     <table class="table table-striped">
        <thead>
        <% users.each do |user| %>
          	<%= image_tag @user.get_profile_image(100,100) %>
        <% end %>
          <tr>
            <th>name</th>
          	<th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
          <tr>

          <div class="row">
            <%= link_to "user_edit", edit_user_path(@user) %>
          </div>
        </thead>

    </table>

      <h2>New book</h2>
      <% if @book.errors.any? %>

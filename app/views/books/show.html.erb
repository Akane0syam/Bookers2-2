<%= render 'book', users: @users %>

  <div class="col-lg-8">
    <h2>Book detail</h2>
    <table class="table ">
      <tbody>

          <tr>
            <td><a href="/users/id">
              <% if @book.user.profile_image.attached? %>
                <%= image_tag @book.user.profile_image, size: "100x100" %>
              <% else %>
                <%= image_tag 'no_image', size: "100x100" %>
              <% end %><br>
              <%= link_to "#{current_user.name}", user_path(:id) %>
            </td>
            <td><%=link_to @book.title %></td>
            <td><%= @book.body %></td>
            <td><%= link_to 'Edit', edit_book_path(@book) %></td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Destroy", @book, method: :delete, data: { confirm: '本当に消しますか?' } %>
              <% end %>
            </td>

          </tr>

      </tbody>
    </table>
  </div>
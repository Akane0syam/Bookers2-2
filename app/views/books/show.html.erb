<div class="container">
  <div class="row">
    <div class="col-lg-3" >

     <h2>User info</h2>
     <table class="table table-striped">
        <thead>
        <% @users.each do |user| %>
          	<%= image_tag @user.get_profile_image(100,100) %>
        <% end %>
          <tr>
            <th>name</th>
          	<th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
          <tr>

          <div class="row">
            <%= link_to "user_edit", edit_user_path(@user) %>

          </div>
        </thead>

    </table>

      <h2>New book</h2>
        <%= form_with model: @book do |f| %>
          <h4>title</h4>
            <%= f.text_field :title%>
          <h4>Opinion</h4>
            <%= f.text_area :body %>

            <br>

          <%= f.submit 'Create Book' %>
        <% end %>
    </div>

  <div class="col-lg-8">
    <h2>Book detail</h2>
    <table class="table ">
      <tbody>

        <tr>
          <td><a href="/users/id">
            <% if @book.user.profile_image.attached? %>
              <%= image_tag @book.user.profile_image, size: "100x100" %>
            <% else %>
              <%= image_tag 'no_image', size: "100x100" %>
            <% end %><br>
            <%= link_to "#{current_user.name}", user_path(:id) %>
          </td>
          <td><%=link_to @book.title %></td>
          <td><%= @book.body %></td>
          <td><%= link_to 'Edit', edit_book_path(@book) %></td>
          <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか?' } %></td>
        </tr>
      </tbody>
    </table>
  </div>
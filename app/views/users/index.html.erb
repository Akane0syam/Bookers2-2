<div class="col-lg-4" style="background-color: orange;">
  <h2>User info</h2>
</div>
      <div class="col-lg-8">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>name</th><br>
              <th>introduction</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        </table>
        <tbody>
          <% @users.each do |user| %>
        	  <tr>
        	    <td><%= image_tag @user.get_profile_image(100,100) %></td>
        	  	<td><%= @user.name %></td>
        	  </tr>
          <% end %>
        </tbody>
      </div>
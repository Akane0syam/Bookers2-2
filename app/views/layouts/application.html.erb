<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-dark bg-dark navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Bookers</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="d-flex justify-content-end collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item active">
              <a class="nav-link" href="/books">Home</a>
              <%= link_to"Home", "/books" %>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/users/:id">Users</a>
              <%= link_to 'Users', user_path(current_user.id) %>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/books">Books</a>
              <%= link_to "Books", books_path %>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/users/sign_out">Log out</a>
              <%= link_to "Log out", destroy_user_session_path, method: :delete %>
            </li>
          <% else %>
            <li class="nav-item active">
              <a class="nav-link" href="/">Home</a>
              <%= link_to "Home",top_path %>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/homes/about">About</a>
              <%= link_to "About", about_path %>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/users/sign_up">Sign up</a>
              <%= link_to "Sign up", new_user_registration_path %>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/users/sign_in">Log in</a>
              <%= link_to "Log in", new_user_session_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </header>
    <%= yield %>
    <footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
  </body>
</html>
